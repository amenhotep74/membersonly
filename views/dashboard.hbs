<h1>Dashboard Page</h1>
{{#if user}}
<p>Welcome {{user.name}}</p>
{{else}}
<p>ERROR: NOT CURRENTLY SIGNED IN.</p>
{{/if}}

<a href="/users/logout" class="btn btn-secondary">Logout</a>
<a href="/dashboard/create" class="btn btn-primary"><i class="fas fa-plus-circle"></i> Create New Message</a>
<h2>Messages Board:</h2>
<div class="container">
    {{#each message}}
    <hr>
    <h3>{{this.title}}</h3>
    <p>{{this.content}}</p>
    <p>{{this.author}}</p>
    <hr>
    {{/each}}
</div>